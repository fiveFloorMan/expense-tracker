<div class="container-sm">
  <div class="card mt-4 w-50 mx-auto">
    <h2 class="mx-auto mt-4">請修改你的支出</h2>
    {{> message}}
    <form action="/records/{{_id}}/edit?_method=PUT" method="POST" class="row justify-content-center">
      {{!-- record name  --}}
      <div class="row mt-3">
        <div class="col-3">
          <label for="recordName" class="form-label mt-1">名稱 :</label>
        </div>
        <div class="col-9">
          <input id="recordName" name="recordName" class="form-control" placeholder="Text name here" type="text" value="{{name}}">
        </div>
      </div>
      {{!-- record date --}}
      <div class="row mt-3">
        <div class="col-3">
          <label for="recordDate" class="form-label mt-1">日期 : </label>
        </div>
        <div class="col-9">
          <input id="recordDate" name="recordDate" class="form-control" placeholder="Text Date here" type="date" value="{{date}}">
        </div>
      </div>
      {{!-- record category  先不寫直到會寫option--}}
      <div class="row mt-3">
        <div class="col-3">
          <label for="recordCategory" class="form-label mt-1">類別 : </label>
        </div>
        <div class="col-9">
          <input id="recordCategory" name="recordCategory" class="form-control" placeholder="Text Category here" type="date" value="{{date}}">
        </div>
      </div>
      {{!-- record amount --}}
      <div class="row mt-3">
        <div class="col-3">
          <label for="recordAmount" class="form-label mt-1">金額 : </label>
        </div>
        <div class="col-9">
          <input id="recordAmount" name="recordAmount" class="form-control" placeholder="Text Amount here" type="Amount" value="{{amount}}">
        </div>
      </div>
      {{!-- 修改 button --}}
      <div class="col-8 mt-4 mb-4">
        <button class="btn btn-success w-100">修改</button>
      </div>
    </form>
  </div>
</div>